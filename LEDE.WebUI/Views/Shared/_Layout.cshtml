<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ECSEL</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        container {padding-top: 10px;}
        .jumbotron {margin-top: 10px;}
        .validation-summary-errors {color: #f00;}
    </style>
    @if (IsSectionDefined("css"))
    {
        @RenderSection("css")
    }
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a href="" class="navbar-brand">ECSEL</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Candidate"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tasks<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    @Html.ActionLink("Upload", "Index", "Candidate")
                                </li>
                                <li>
                                    @Html.ActionLink("Summary", "Summary", "Candidate")
                                </li>
                            </ul>
                        </li>
                    }
                    else if (User.IsInRole("Faculty"))
                    {
                        <li>@Html.ActionLink("Feedback","Index","Rating")</li>
                        <li>@Html.ActionLink("Submissions","Summary","Faculty")</li>
                        <li>@Html.ActionLink("Unformatted", "Summary", "Unformatted")</li>
                        //<li>@Html.ActionLink("Totals","Seminar","Summary")</li>
                    }
                    else if (User.IsInRole("ECSEL Admin") || User.IsInRole("LEDE Admin") || User.IsInRole("Super Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Enrollment<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    @Html.ActionLink("Prorams", "Programs", "Enrollment")
                                </li>
                                <li>
                                    @Html.ActionLink("Cohorts", "Index", "Enrollment")
                                </li>
                                <li>
                                    @Html.ActionLink("Seminars", "Seminars","Enrollment")
                                </li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Users", "Index", "Admin")</li>
                    }                                                      
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>               
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @if (IsSectionDefined("script"))
    {
        @RenderSection("script")
    }
</body>
</html>