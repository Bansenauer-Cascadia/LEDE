@using LEDE.Domain.Entities
@model IEnumerable<LogAndReadingGraphsDTO>
@{
    ViewBag.Title = "Cohort Hours";
}

<h2>Cohort Totals</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Internship Log Hours</h3>
        <div class="progress">
            <div class="progress-bar bar-kt-c" style="width:100%">Number of Hours</div>
        </div>
    </div>
    <div class="col-md-6">
        <h3>Reading Log Entries</h3>
        <div class="progress">
            <div class="progress-bar bar-sd-1" style="width:33.3%">Number of Entries</div>
        </div>
    </div>
</div>
@foreach (LogAndReadingGraphsDTO total in Model)
{
    <div class="row">
        <div class="col-md-2">
            @total.LastName, @total.FirstName
        </div>
        <div class="col-md-5">
            <div class="progress">
                <div class="progress-bar bar-kt-c" style="width: @total.PercentHrs%">@total.NumHrs</div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="progress">
                <div class="progress-bar bar-sd-1" style="width: @total.PercentEntries%">@total.NumEntries</div>
            </div>
        </div>
    </div>    
}

