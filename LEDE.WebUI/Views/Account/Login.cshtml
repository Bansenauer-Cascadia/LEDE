@model bool?
@{
    ViewBag.Title = "Login";
    bool? isTestLogin = Model;
}
@if (isTestLogin == true)
{
    <div class="row">
        <h2 class="col-md-12">What You're About To See</h2>
        <div class="col-md-6">
            <p>
                The site a Faculty Member for the LEDE/ECSEL program uses to grade student submissions.
            </p>
            <ul>
                <li>
                    I wrote this site as part of a team. I was <i>not</i> responsible for the navbar presentation and most of the CSS. I worked as 
                    part of a team to design the relational database. I <i>was</i> fully responsible for everything else (HTML, Bootstrap, 
                    Javascript, C#, SQL & LINQ queries). 
                </li>
                <li>
                    Feel free to fully interact with the site by uploading files and submitting test ratings. 
                </li>
            </ul>
        </div>
    </div>
}
<h2>Log In</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label>User name</label>
        @Html.TextBox("Name", (string)ViewBag.TestUser, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.Password("Password", (string)ViewBag.TestPassword, new { @class = "form-control" })
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>
}
