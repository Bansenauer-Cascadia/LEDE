@using LEDE.Domain.Entities
@model RatingViewModel

@section script {
    <script src="~/Angular/angular.js"></script>
    <script src="~/Angular/angular-animate.js"></script>
    <script src="~/Angular/angular-resource.js"></script>
    <script src="~/Angular/app.js"></script>
    <script src="~/Angular/rate/gradeTable/gradeTable.directive.js"></script>
    <script src="~/Angular/rate/rate.controller.js"></script>
    <script src="~/Angular/services/taskGradeService.js"></script>
    <script src="~/Angular/services/taskRating.js"></script>
    <script src="~/Angular/services/taskRatingFactory.js"></script>
    <script src="~/Angular/services/taskRatingResource.js"></script>
    <script src="~/Angular/services/taskRatingService.js"></script>
    <script src="~/Angular/services/taskRatingServiceFactory.js"></script>

}

@section css {
    <link href="~/Angular/rate/gradeTable/gradeTable.css" rel="stylesheet" />
}
<div class="page-header">
    <div class="row">
        <div class="col-md-9">
            <h2>@Model.TaskVersion.Task.TaskName</h2>
            <small>@Model.TaskVersion.User.LastName, @Model.TaskVersion.User.FirstName</small>
        </div>
        <div class="col-md-1">
            @using (Html.BeginForm("Header", "Rating", FormMethod.Post))
            {
                @Html.DropDownListFor(x => x.VersID, Model.VersionDrop,
                    new { style = "width:75px", onchange = "this.form.submit();", @class = "form-control" })
            }
        </div>
        <div class="col-md-2" style="text-align:right;">
            @Html.ActionLink("DL", "Download", new { DocumentID = Model.TaskVersion.DocumentID },
                new { @class = "btn btn-default", title = "Download Candidate Submission" })
            @Html.ActionLink("UL", "Upload", new
           {
               VersID = Model.TaskVersion.VersID,
               SelectedUserID =
                   Model.TaskVersion.UserID,
               User = Model.TaskVersion.User.FirstName + " " + Model.TaskVersion.User.LastName,
               TaskName = Model.TaskVersion.Task.TaskName,
               Version = Model.TaskVersion.Version,
               returnUrl = Request.Url.PathAndQuery
           },
           new { @class = "btn btn-default upload", title = "Upload Feedback For Submission" })
        </div>
    </div>
</div>

<div ng-app="facultyApp">
    <div ng-controller="RateCtrl">
        <div ng-show="grade.LogRating.IsExistingRating()">
            <table class="table">
                <thead>
                    <tr>
                        <th>Number of Entries</th>
                    </tr>
                </thead>
                <tr>
                    <td>
                        <input type="number" ng-model="grade.LogRating.data.NumEntries" />
                    </td>
                </tr>
            </table>
        </div>

        <div ng-show="grade.ReflectionRating.IsExistingRating()">
            <table class="table">
                <thead>
                    <tr>
                        <th>Number of Hours</th>
                    </tr>
                </thead>
                <tr>
                    <td>
                        <input type="number" ng-model="grade.ReflectionRating.data.NumHours" />
                    </td>
                </tr>
            </table>
        </div>
        <h3>Seminar Core Topic Ratings</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Core Topic</th>
                    <th>Conceptual</th>
                    <th>Strategic</th>
                    <th>Personal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="rating in grade.TaskCoreRatings">
                    <td>
                        {{rating.data.CoreTopicTitle}}
                    </td>
                    <td>
                        <input type="number" ng-model="rating.data.CScore" min="0" max="3" name="foo" integer />
                    </td>
                    <td>
                        <input type="number" ng-model="rating.data.SScore" min="0" max="3" integer />
                    </td>
                    <td>
                        <input type="number" ng-model="rating.data.PScore" min="0" max="3" integer />
                    </td>
                    <td>
                        <span class="glyphicon glyphicon-remove" ng-click="rating.Clear()" ng-show="!rating.IsEmpty()"></span>
                    </td>
                </tr>
            </tbody>
        </table>
        <h3>Other Core Ratings</h3>
        <grade-table ratings="grade.OtherCoreRatings"></grade-table>

        <h3>Impact Rating</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Structures & Operations</th>
                    <th>Professional Practices</th>
                    <th>Student Learning</th>
                    <th></th>
                </tr>
                <tr>
                    <td>
                        <input type="number" ng-model="grade.ImpactRating.data.SScore" />
                    </td>
                    <td>
                        <input type="number" ng-model="grade.ImpactRating.data.PScore" />
                    </td>
                    <td>
                        <input type="number" ng-model="grade.ImpactRating.data.LScore" />
                    </td>
                    <td>
                        <span class="glyphicon glyphicon-remove" ng-click="grade.ImpactRating.Clear()" ng-show="!grade.ImpactRating.IsEmpty()"></span>
                    </td>
                </tr>
            </thead>
        </table>

        <button class="btn-success" ng-click="SaveGrade()">Save</button> 
        <span ng-show="errorSavingGrade === false">Grade Saved Successfully!</span>
    </div>    
</div>
